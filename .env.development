# Development Environment Configuration
NODE_ENV=development
PORT=3001

# NPM Backend Configuration - use host.docker.internal for Docker Desktop
NPM_API_URL=http://localhost:81
NPM_SERVICE_NAME=npm-backend
NPM_INTERNAL_PORT=81

# Docker Configuration
DOCKER_NETWORK=npmdeck

# API Timeout Configuration (milliseconds) - More lenient for development
REQUEST_TIMEOUT=60000
PROXY_TIMEOUT=60000
CONNECT_TIMEOUT=15000
SOCKET_TIMEOUT=120000

# Retry Configuration - Less aggressive for development
RETRY_ATTEMPTS=2
RETRY_DELAY=500
RETRY_BACKOFF=false

# CORS Configuration - Allow all origins in development
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Security Configuration - Disabled in development
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_MAX_FAILURES=5

# Logging Configuration - Verbose for development
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_REQUESTS=true
LOG_PROXY=true

# Feature Flags
ENABLE_LOGS=true
ENABLE_METRICS=true

# Vite Development Configuration
VITE_API_URL=/api
VITE_PROXY_TARGET=http://localhost:3001